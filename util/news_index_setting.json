{
  "settings": {
    "index": {
      "max_ngram_diff": 4
    },
    "analysis": {
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "2",
          "max_gram": "6"
        },
        "nori_tokenizer_none": {
          "type": "nori_tokenizer",
          "decompound_mode": "none"
        },
        "nori_tokenizer_mixed": {
          "type": "nori_tokenizer",
          "decompound_mode": "mixed"
        }
      },
      "filter": {
        "nori_pos_filter": {
          "type": "nori_part_of_speech",
          "stoptags": ["J", "E" , "VA", "XSA", "XR", "VX", "IC", "SN", "SP", "NR", "J", "E"]
        },
        "nori_readingform": {
          "type": "nori_readingform"
        },
        "lowercase": {
          "type": "lowercase"
        }
      },
      "analyzer": {
        "ngram_analyzer": {
          "tokenizer": "ngram_tokenizer"
        },
        "nori_mixed_stop": {
          "type": "custom",
          "tokenizer": "nori_tokenizer_mixed",
          "filter": [
            "nori_readingform",
            "nori_pos_filter"
          ]
        },
        "nori_mixed": {
          "type": "custom",
          "tokenizer": "nori_tokenizer_mixed",
          "filter": [
            "nori_readingform"
          ]
        },
        "standard": {
            "type": "custom",
            "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "fields": {
          "standard": {
            "type": "text",
            "analyzer": "standard"
          },
          "nori_mixed": {
            "type": "text",
            "analyzer": "nori_mixed"
          },
          "nori_mixed_stop": {
            "type": "text",
            "analyzer": "nori_mixed_stop",
            "fielddata": true
          },
          "ngram": {
            "type": "text",
            "analyzer": "ngram_analyzer"
          }
        }
      },
      "content": {
        "type": "text",
        "fields": {
          "standard": {
            "type": "text",
            "analyzer": "standard"
          },
          "nori_mixed": {
            "type": "text",
            "analyzer": "nori_mixed"
          },
          "nori_mixed_stop": {
            "type": "text",
            "analyzer": "nori_mixed_stop",
            "fielddata": true
          },
          "ngram": {
            "type": "text",
            "analyzer": "ngram_analyzer"
          }
        }
      },
      "provider": {
        "type": "nested",
        "properties": {
          "name": {
            "type": "keyword"
          },
          "section": {
            "type": "keyword"
          },
          "local": {
            "type": "keyword"
          },
          "abc": {
            "type": "keyword"
          }
        }
      },
      "byline": {
        "type": "text",
        "fields": {
          "standard": {
            "type": "text",
            "analyzer": "standard"
          },
          "nori_mixed": {
            "type": "text",
            "analyzer": "nori_mixed"
          }
        }
      },
      "category": {
        "type": "nested",
        "properties": {
          "first": {
            "type": "keyword"
          },
          "second": {
            "type": "keyword"
          },
          "third": {
            "type": "keyword"
          }
        }
      },
      "dateline": {
        "type": "date",
        "format": "yyyy-MM-dd HH:mm:ss||strict_date_optional_time||epoch_millis"
      }
    }
  }
}


