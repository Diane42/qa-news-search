{
  "settings": {
    "index": {
      "analysis": {
        "tokenizer": {
          "nori_tokenizer_mixed": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed"
          }
        },
        "filter": {
          "nori_pos_filter": {
            "type": "nori_part_of_speech",
            "stoptags": [
              "E",
              "IC",
              "J",
              "MAG",
              "MAJ"
            ]
          },
          "nori_readingform": {
            "type": "nori_readingform"
          }
        },
        "analyzer": {
          "korean_mixed": {
            "type": "custom",
            "tokenizer": "nori_tokenizer_mixed",
            "filter": [
              "nori_readingform",
              "nori_pos_filter"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "title": {
        "type": "text",
        "analyzer": "korean_mixed"
      },
      "content": {
        "type": "text",
        "analyzer": "korean_mixed"
      },
      "provider": {
        "type": "text",
        "analyzer": "korean_mixed",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "byline": {
        "type": "text",
        "analyzer": "korean_mixed"
      }
    }
  }
}